@model Do_Again.viewModels.CreateBookNew

@{
    ViewBag.Title = "create Employee";
}
<form class="any" enctype="multipart/form-data"style="border-radius:0.25rem;padding: 20px;" asp-controller="home" asp-action="Create"
      method="post" class="mt-3">
<div class="form-group row">
    <label asp-for="Name" class="col-sm-2 col-form-label"></label>
    <div class="col-sm-10">
        <input asp-for="Name" class="form-control" placeholder="Name">
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
</div>
<div class="form-group row">
    <label asp-for="Price" class="col-sm-2 col-form-label"></label>
    <div class="col-sm-10">
        <input asp-for="Price" class="form-control" placeholder="Price">
        <span asp-validation-for="Price" class="text-danger"></span>
    </div>
</div>

<div class="form-group row">
    <label asp-for="categorys" class="col-sm-2 col-form-label"></label>
    <div class="col-sm-10">
<select asp-for="TypeOfBookid" asp-items="@(new SelectList(Model.categorys, "TypeofbookId", "Name_catogry"))"></select>
        <span asp-validation-for="categorys" class="text-danger"></span>
    </div>
</div>

    <div class="form-group row">
        <label asp-for="Photopath" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <div class="custom-file">
                <input type="file" multiple asp-for="Photopath" class="form-control custom-file-input">
                <label class="custom-file-label">Choose File...</label>
            </div>
        </div>
    </div>
<div asp-validation-summary="All" class="text-danger"></div>

<div class="form-group row">
    <div class="col-sm-10">
        <button type="submit" class="btn btn-primary">Create</button>
    </div>
</div>


<div>
    <a asp-action="Index">Back to List</a>
</div>
   @section Scripts {
        <script>
            $(document).ready(function () {
                $('.custom-file-input').on("change", function () {
                    var fileName = $(this).val().split("\\").pop();
                    $(this).next('.custom-file-label').html(fileName);
                });
            });
        </script>
    }
</form>